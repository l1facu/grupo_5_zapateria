                        <label for="">30</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="32">
                        <label for="">32</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="34">
                        <label for="">34</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="35">
                        <label for="">35</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="36">
                        <label for="">36</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="37">
                        <label for="">37</label>
                    </div>
                    <div class="checkbox">
