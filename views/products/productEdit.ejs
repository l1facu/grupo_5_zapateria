</head>

<body>

    <!-- ********** HEADER *********** -->
    <%- include('../partials/header.ejs') %>

        <!-- ********** MAIN *********** -->
        <main>
            <h2 class="titulo-main">Editar producto - <%= editProduct.name %> -</h2>
            <form id="formulario" action="/product-edit/<%=editProduct.id%>?_method=PUT" method="POST" class="creacion-formulario">
                <div class="control-form">
                    <label for="nombre" class="titulos-form">Nombre producto:</label>
                    <input type="text" name="name" id="nombre" class="control" value="<%= editProduct.name %>">
                </div>
    
                <div class="control-form">
                    <label for="marca" class="titulos-form">Marca:</label>
                    <input type="text" name="marca" id="marca" class="control" value="<%= editProduct.marca %>">
                </div>

                <div class="control-form">
                    <label for="descuento" class="titulos-form">Descuento:</label>
                    <input type="number" name="discount" id="descuento" class="control" value="<%= editProduct.discount %>">
                </div>

                <div class="control-form">
                    <label for="imagen" class="titulos-form">Editar imagenes del producto</label>
                    <input type="file" name="image" id="descuento" class="control" placeholder="Imagenes">
                </div>

                <div class="control-check">
