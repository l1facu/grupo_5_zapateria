                    </div>
                    <div class="checkbox">
                        <input type="checkbox" name="talle" id="talle" value="47">
                        <label for="">47</label>
                    </div>
                </div>
        
                <div class="control-form">
                    <label for="descuento" class="titulos-form">Precio:</label>
                    <input type="number" name="price" id="precio" class="control" value="<%= editProduct.price %>">
                </div>
    
                <div class="control-form">
                    <label for="precio" class="titulos-form" >Descripcion del producto</label>
                    <textarea name="comentario" id="comentario" cols="30" rows="10" class="control"></textarea>
                </div>
    
                <div class="botones">
                    <button type="submit" class="boton-formulario" style="margin-right: 10px;" id="boton">Editar producto</button>
                </div>
            </form>
            
        </main>
    

